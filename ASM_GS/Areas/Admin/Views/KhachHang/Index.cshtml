                            <td>@(Model.ToList().IndexOf(khachHang) + 1)</td>
                            <td>@khachHang.TenKhachHang</td>
                            <td>@khachHang.SoDienThoai</td>
                            <td>@khachHang.DiaChi</td>
                            <td>@khachHang.NgayDangKy.ToShortDateString()</td>
                            <td>
