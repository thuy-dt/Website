<script>
    document.getElementById("Anh").addEventListener("change", function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("uploadedAvatar").src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
    $(document).ready(function () {
        $("#btnThem").click(function (e) {
            e.preventDefault();

            var customerData = {
                TenKhachHang: $("#TenKhachHang").val(),
                SoDienThoai: $("#SoDienThoai").val(),
                DiaChi: $("#DiaChi").val(),
                Anh: $("#Anh")[0].files[0], // Lấy file ảnh
                Cccd: $("#Cccd").val(),
                NgaySinh: $("#NgaySinh").val(),
                GioiTinh: $("#GioiTinh").val()
            };

            // Tạo đối tượng FormData để gửi dữ liệu bao gồm cả file
            var formData = new FormData();
            formData.append("customer", JSON.stringify(customerData));
            formData.append("Anh", customerData.Anh);

            // Gửi AJAX POST request đến controller
            $.ajax({
                url: '/Admin/KhachHang/CreateCustomer',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        alert("Khách hàng đã được thêm thành công!");
                        $("#myModal").modal('hide');  // Đóng modal
                    } else {
                        // Clear any previous error messages
                        $(".text-danger").text("");

                        // Display errors for each field
                        for (var key in response.errors) {
                            if (response.errors.hasOwnProperty(key)) {
                                $("#error" + key).text(response.errors[key]);
                            }
                        }
                    }
                },
                error: function (xhr, status, error) {
                    alert("Có lỗi xảy ra. Vui lòng thử lại.");
                }
            });
        });
    });

</script>
<script>
    function LoadData(id) {
        $.ajax({
            url: `KhachHang/EditCustomer?id=${id}`,
            type: 'GET',
            success: function (customer) {
                $('#MaKhachHang1').val(customer.maKhachHang)
                $('#TenKhachHang1').val(customer.tenKhachHang)
                $('#TenKhachHang1').val(customer.tenKhachHang);
                $('#SoDienThoai1').val(customer.soDienThoai);
                $('#DiaChi1').val(customer.diaChi);
                $('#Cccd1').val(customer.cccd);
                $('#NgaySinh1').val(customer.ngaySinh);
                $('#GioiTinh1').val(customer.gioiTinh ? 'true' : 'false');
                $('#uploadedAvatar1').attr('src', customer.hinhAnh || '../assets/img/avatars/1.png');
                $('#myModal1').modal('show');
            }
        });
    };

    $('#btnSua').on('click', function () {
        const formData = new FormData();
        formData.append('MaKhachHang', $('#MaKhachHang1').val());
        formData.append('TenKhachHang', $('#TenKhachHang1').val());
        formData.append('SoDienThoai', $('#SoDienThoai1').val());
        formData.append('DiaChi', $('#DiaChi1').val());
        formData.append('Cccd', $('#Cccd1').val());
        formData.append('NgaySinh', $('#NgaySinh1').val());
        formData.append('GioiTinh', $('#GioiTinh1').val());
        formData.append('Anh', $('#Anh1')[0].files[0]);

        $.ajax({
            url: 'KhachHang/EditCustomer2',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    $('#myModal1').modal('hide');
                    location.reload();
                } else {
                    for (var key in response.errors) {
                        if (response.errors.hasOwnProperty(key)) {
                            $("#error" + key + "1").text(response.errors[key]);
                        }
                    }
                }
            },
            error: function () {
                alert("Failed to update customer.");
            }
        });
    });
</script>
