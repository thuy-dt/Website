                                }
                            </td>
                            <td>@khachHang.Cccd</td>
                            <td>@(khachHang.NgaySinh?.ToShortDateString() ?? "N/A")</td>
                            <td>@(khachHang.GioiTinh.HasValue ? (khachHang.GioiTinh.Value ? "Nam" : "Nữ") : "N/A")</td>
                            <td>@(khachHang.TrangThai == 0 ? "Ngừng hoạt động" : "Hoạt động")</td>
