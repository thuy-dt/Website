@model IEnumerable<ASM_GS.ViewModels.DonHang_LSViewModel>

<div style="margin-top: 200px;">
    <h1>@ViewData["Title"]</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Mã Hóa Đơn</th>
                <th>Mã Khách Hàng</th>
                <th>Ngày Xuất</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model) 
            {
                <tr>
                    <td>@order.MaHoaDon</td>
                    <td>@order.MaKhachHang</td>
                    <td>@order.NgayXuatHoaDon</td>
                    <td>@order.TongTien</td>
                    <td>@order.TrangThai</td>
                    <td>
                        <a href="@Url.Action("Details", "DonHangLS", new { id = order.MaHoaDon })">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
